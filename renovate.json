{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "separateMultipleMajor": false,
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "automerge": false
    }
  ],
  "schedule": ["before 4am"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "timezone": "Asia/Tokyo"
}
